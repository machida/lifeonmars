= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :done
    %br/
    = f.check_box :done
  .actions
    = f.submit
